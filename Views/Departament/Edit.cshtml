@model clinicaMedicala4.Models.Departament

@{
    ViewBag.Title = "Editeaza detaliile despre departament";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Departament"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(dep => dep.FilialaId)
    <br />
    @Html.Label("Denumire", "Denumire:")
    <br />
    @Html.EditorFor(dep => dep.Denumire, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(dep => dep.Denumire, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("NrAngajati", "Nr de angajati:")
    <br />
    @Html.Editor("NrAngajati", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(dep => dep.NrAngajati, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-warning" type="submit">Update</button>
}